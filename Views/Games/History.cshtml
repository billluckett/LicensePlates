@model IEnumerable<LicensePlatesDBFirst.Models.Game>

@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-sm {
        margin: 1px;
    }
</style>

<h2 class="pull-left">License Plates Tracker - @ViewBag.Title</h2>

<p class="pull-right" style="margin:15px;">
    @Html.ActionLink("+ New Game", "NewGame", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Possible)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @item.Start.ToString("d")
            </td>
            <td>
                @item.Stop.ToString("d")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Possible)
            </td>
            <td>
                <a href="@Url.Action("Play", new { id = item.Id })" style="text-decoration:none;color:green;">
                    Play
                </a>
                |
                <a href="@Url.Action("Settings", new { id = item.Id })" style="text-decoration:none;">
                    Settings
                </a>
                |
                <a href="@Url.Action("Delete", new { id = item.Id })" style="text-decoration:none;color:red;">
                    Delete
                </a>
                @*<a href="@Url.Action("Play", new { id = item.Id })" style="text-decoration:none;color:green;">
                    <span class="glyphicon glyphicon-play"></span>
                </a>
                |
                <a href="@Url.Action("Settings", new { id = item.Id })" style="text-decoration:none;">
                    <span class="glyphicon glyphicon-cog"></span>
                </a>
                |
                <a href="@Url.Action("Delete", new { id = item.Id })" style="text-decoration:none;color:red;">
                    <span class="glyphicon glyphicon-remove"></span>
                </a>*@
            </td>
        </tr>
    }
</table>

@if (Model.Count() == 0)
{
    <p>
        You don't have any games yet! Click the "New Game" button above to get started.
    </p>
}

